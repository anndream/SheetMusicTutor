<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vanwingerdenbarrier.sheetmusictutor">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Game.GameActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".OptionsActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".UserInfo.UserMenu"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Quiz.QuizActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ResultsActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Game.GameSelection"
            android:screenOrientation="landscape" />
        <activity
            android:name=".NoteDefense.NoteDefense"
            android:label="@string/title_activity_note_defense"
            android:theme="@style/AppTheme" />
        <activity android:name=".Achievements"
            android:screenOrientation="landscape"></activity>
    </application>

</manifest>