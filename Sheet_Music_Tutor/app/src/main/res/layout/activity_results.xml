<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/purple"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:weightSum="10"
    tools:context="vanwingerdenbarrier.sheetmusictutor.ResultsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:weightSum="10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:orientation="vertical"
            android:weightSum="10">

            <TextView
                style="@android:style/TextAppearance.DeviceDefault.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:gravity="center"
                android:text="Quiz Results"
                android:textColor="@color/gold"
                android:id="@+id/title"/>

            <TextView
                style="@android:style/TextAppearance.DeviceDefault.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Try Studying More!"
                android:textColor="@color/black"
                android:id="@+id/quote"/>

            <TextView
                style="@android:style/TextAppearance.DeviceDefault.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Correct: 4/5"
                android:textColor="@color/gold"
                android:id="@+id/correct"
                />

            <TextView
                style="@android:style/TextAppearance.DeviceDefault.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Points: 6/10"
                android:textColor="@color/gold"
                android:id="@+id/points"/>

            <TextView
                style="@android:style/TextAppearance.DeviceDefault.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Score: 70%"
                android:textColor="@color/gold"
                android:id="@+id/percent"/>
        </LinearLayout>



        <ProgressBar
            android:id="@+id/ProgressBar"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:indeterminate="false"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:background="@drawable/circle_shape"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="65" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:weightSum="10"
        android:orientation="horizontal">



        <Button
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Try Again(Placeholder)"
            android:onClick="quizGame"
            android:background="@color/black"
            android:textColor="@color/gold"
            />
    </LinearLayout>


</LinearLayout>